{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": [
    "airbnb-base",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:import/typescript"
  ],
  "settings": {
    "import/extensions": [".js", ".ts"],
    "import/parsers": {
      "@typescript-eslint/parser": [".ts"]
    }
  },
  "env": {
    "browser": true,
    "mocha": true,
    "jest": true,
    "node": true,
    "jasmine": true,
    "jquery": true
  },
  "globals": {
    // e.g. "angular": true
  },
  "rules": {
    "linebreak-style": ["error", "windows"],
    "brace-style": 0,
    "class-methods-use-this": 0,
    "max-len": ["error", { "ignoreComments": true, "ignoreTrailingComments": true }],
    "spaced-comment": 0,
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "implicit-arrow-linebreak": 0,
    "no-console": 0,
    "no-dupe-keys": 2,
    "no-empty": 2,
    "no-empty-character-class": 2,
    "no-func-assign": 2,
    "no-invalid-regexp": 2,
    "quote-props": 0,
    "no-unreachable": 2,
    "use-isnan": 2,
    "block-scoped-var": 2,
    "default-case": 1,
    "eqeqeq": 1,
    "no-new-wrappers": 1,
    "vars-on-top": 2,
    "no-use-before-define": 1,
    "new-cap": 2,
    "no-mixed-spaces-and-tabs": 2,
    "quotes": 2,
    "semi": 2,
    "no-var": 2,
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],
    "@typescript-eslint/semi": ["error"],
    "@typescript-eslint/no-var-requires": 0,
    "no-undef": "off"
  }
}
